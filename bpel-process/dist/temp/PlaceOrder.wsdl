<?xml version="1.0" encoding="UTF-8"?>
<definitions name="PlaceOrder"
    targetNamespace="http://globalbooks.com/bpel/placeorder"
    xmlns="http://schemas.xmlsoap.org/wsdl/"
    xmlns:tns="http://globalbooks.com/bpel/placeorder"
    xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <!-- Types -->
    <types>
        <xsd:schema targetNamespace="http://globalbooks.com/bpel/placeorder">
            <xsd:element name="PlaceOrderRequest">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="customerName" type="xsd:string"/>
                        <xsd:element name="customerEmail" type="xsd:string"/>
                        <xsd:element name="orderItems">
                            <xsd:complexType>
                                <xsd:sequence>
                                    <xsd:element name="item" maxOccurs="unbounded">
                                        <xsd:complexType>
                                            <xsd:sequence>
                                                <xsd:element name="bookId" type="xsd:string"/>
                                                <xsd:element name="quantity" type="xsd:int"/>
                                            </xsd:sequence>
                                        </xsd:complexType>
                                    </xsd:element>
                                </xsd:sequence>
                            </xsd:complexType>
                        </xsd:element>
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
            
            <xsd:element name="PlaceOrderResponse">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="orderId" type="xsd:string"/>
                        <xsd:element name="status" type="xsd:string"/>
                        <xsd:element name="totalAmount" type="xsd:decimal"/>
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
        </xsd:schema>
    </types>

    <!-- Messages -->
    <message name="PlaceOrderRequest">
        <part name="parameters" element="tns:PlaceOrderRequest"/>
    </message>
    <message name="PlaceOrderResponse">
        <part name="parameters" element="tns:PlaceOrderResponse"/>
    </message>

    <!-- Port Type -->
    <portType name="PlaceOrderPT">
        <operation name="placeOrder">
            <input message="tns:PlaceOrderRequest"/>
            <output message="tns:PlaceOrderResponse"/>
        </operation>
    </portType>

    <!-- Partner Link Types -->
    <plnk:partnerLinkType name="PlaceOrderPLT">
        <plnk:role name="PlaceOrderProvider" portType="tns:PlaceOrderPT"/>
    </plnk:partnerLinkType>

    <!-- Bindings -->
    <binding name="PlaceOrderBinding" type="tns:PlaceOrderPT">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="placeOrder">
            <soap:operation soapAction="http://globalbooks.com/placeOrder"/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
        </operation>
    </binding>

    <!-- Service -->
    <service name="PlaceOrderService">
        <port name="PlaceOrderPort" binding="tns:PlaceOrderBinding">
            <soap:address location="http://localhost:8080/ode/processes/placeOrder"/>
        </port>
    </service>
</definitions>
